<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:src="@mipmap/logo" />

    <com.common.view.CBButtonViewM
        android:id="@+id/btnSignupVenueOwner"
        style="@style/LightFlatWaveColorButtonRippleStyle_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg_accept"
        android:text="SIGN UP AS A VENUE OWNER"
        android:textColor="@color/white" />

    <com.common.view.CBButtonViewM
        android:id="@+id/btnSignupPromoter"
        style="@style/LightFlatWaveColorButtonRippleStyle_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_bg_accept"
        android:text="SIGN UP AS A PROMOTER"
        android:textColor="@color/white" />

</LinearLayout>